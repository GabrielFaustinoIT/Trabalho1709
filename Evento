using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace projEventos
{
    class Evento
    {
        private int id;
        private string descricao ;
        qtdMaxPart int;
        participantes Participante[];
        

        public int Id
        {
            get { return id; }
      
        }
        
        
        public string Descricao
        {
            get {return descricao;}
        } 
        
        
        public Participante[] oParticipante
        {
            get {return Participante;}
        } 
        
        {
            get { return id; }
      
        }
        
           public int qtdeMax
        {
            get { return qtdMaxPart; }
      
        }


        public Evento(int qtdMaxPart)
        {
            this.id = id;
            this.descricao = descricao;
            this.qtdMaxPart = qtdMaxPart;
            for (i = 0; i <= this.qtdMaxPart; i++){
            
                this.oParticipante[i] = new Participante ("", "");
            }
        }
        
 
        
     
        }
        
        public Participante pesquisarParticipante(Participante p)
        {
            Participante participanteAchado = new Participante();
            int i = participanteAchado.qtdMaxPart;
            if (!this.oParticipante[i].Equals(p)){
          
      participanteAchado = this.oParticipante[i];
            }
            return participanteAchado;
        }
      
      
 
       
                     public override string ToString()
        {
            string dados = "";
            foreach (Participante p in this.oParticipante)
                dados += v.ToString();
            dados += "------------------";
            return dados;
        }
        
                public override bool Equals(object obj)
        {
            return this.id.Equals(((Evento)obj).id);
        }

    }
}
